function [cumulativeEnergyMap] = cumulative_min_energy_map(energyImg,seamDirection)
%UNTITLED Summary of this function goes here
%   Detailed explanation goes here
[m,n] = size(energyImg);

if strcmp(seamDirection, 'VERTICAL')
    for x = 2:m
        energy_img(x, 1) = energyImg(x,1) + min([energy_img(x-1, 1), energy_img(x-1,2)]);
        energy_img(x, n) = energyImg(x,n) + min([energy_img(x-1, n-1), energy_img(x-1, n)]);
        for y = 2:n-1
            energy_img(x,y) = energyImg(x,y) + min([enerygy_img(x-1, y-1), energy_img(x-1,y), energy_img(x-1, y+1)]);
        end
    end

elseif strcmp(seamDirection, 'HORIZONTAL')

end
end